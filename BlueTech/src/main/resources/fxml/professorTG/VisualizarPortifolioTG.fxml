<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane
        xmlns="http://javafx.com/javafx/24.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="br.com.squadtech.bluetech.controller.professorTG.VisualizarPortifolioTGController"
        prefHeight="600.0"
        prefWidth="900.0"
        stylesheets="@../../css/Style.css">

    <children>
        <VBox
                layoutX="20.0"
                layoutY="20.0"
                spacing="15.0"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">

            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <!-- Título -->
            <Label
                    text="Visualizar Portfólios Finalizados"
                    style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <!-- Filtros -->
            <HBox spacing="10.0">
                <Label text="Curso:" />
                <ComboBox fx:id="comboCurso" prefWidth="180.0" />
                <Button fx:id="btnBuscar" text="Buscar" onAction="#buscarPortifolio" />
            </HBox>

            <!-- Área rolável de cards -->
            <ScrollPane
                    fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    prefHeight="450.0"
                    styleClass="scroll-naked">

                <content>
                    <VBox
                            fx:id="cardsBox"
                            spacing="12.0"
                            alignment="TOP_CENTER"
                            style="-fx-background-color: transparent;">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>

        </VBox>
    </children>
</AnchorPane>
