<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            stylesheets="@../../css/Style.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.squadtech.bluetech.controller.professorTG.VisualizarPortifolioTGController">

    <children>
        <VBox layoutX="20" layoutY="20" spacing="15"
              AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="0">

            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Título -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;"
                   text="Visualizar Portfólios Finalizados" />

            <!-- Filtros -->
            <HBox spacing="10">
                <Label text="Curso:" />
                <ComboBox fx:id="comboCurso" prefWidth="180" />
                <Label text="Semestre:" />
                <ComboBox fx:id="comboSemestre" prefWidth="150" />
                <Label text="Portfólio:" />
                <ComboBox fx:id="comboPortifolio" prefWidth="180" />
                <Button fx:id="btnBuscar" onAction="#buscarPortifolio" text="Buscar" />
            </HBox>

            <!-- Scroll para cards -->
            <ScrollPane fx:id="scrollPane"
                        fitToWidth="true"
                        hbarPolicy="NEVER"
                        prefHeight="450"
                        styleClass="scroll-naked"
                        vbarPolicy="AS_NEEDED">

                <content>
                    <!-- Caixa onde os cards serão adicionados dinamicamente -->
                    <VBox fx:id="cardsBox"
                          spacing="12"
                          alignment="TOP_CENTER"
                          style="-fx-background-color: transparent;">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>
        </VBox>
    </children>
</AnchorPane>
