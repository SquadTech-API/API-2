<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.squadtech.bluetech.controller.professorTG.VisualizarPortifolioTGController"
            prefWidth="900.0" prefHeight="600.0"
            stylesheets="@../../css/VisualizarPortifolioTG.css">

    <children>
        <VBox spacing="15" layoutX="20" layoutY="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Título -->
            <Label text="Visualizar Portfólios Finalizados" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <!-- Filtros -->
            <HBox spacing="10">
                <Label text="Curso:"/>
                <ComboBox fx:id="comboCurso" prefWidth="180"/>
                <Label text="Semestre:"/>
                <ComboBox fx:id="comboSemestre" prefWidth="150"/>
                <Label text="Portfólio:"/>
                <ComboBox fx:id="comboPortifolio" prefWidth="180"/>
                <Button text="Buscar" fx:id="btnBuscar" onAction="#buscarPortifolio"/>
            </HBox>

            <!-- Scroll para cards -->
            <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="scroll-naked">
                <content>
                    <VBox fx:id="cardsBox" spacing="12">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>
        </VBox>
    </children>
</AnchorPane>
