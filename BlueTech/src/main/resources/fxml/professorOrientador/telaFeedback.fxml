<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/21.0.8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.squadtech.bluetech.controller.professorOrientador.TelaFeedbackController"
      prefWidth="1366.0" prefHeight="768.0" style="-fx-background-color: #e0e0e0;">

    <!-- Painel principal da esquerda -->
    <AnchorPane prefWidth="962.0" style="-fx-background-color: #f4f4f4;" HBox.hgrow="ALWAYS">
        <children>
            <VBox fx:id="vb_professorTG_Container" spacing="10.0"
                  AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
                  AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <ScrollPane fx:id="sp_professorTG_Info" prefHeight="700.0" fitToWidth="true">
                    <content>
                        <VBox fx:id="vb_professorTG_InfoConteudo" spacing="10.0">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                            <!-- Conteúdo carregado dinamicamente via controller -->
                        </VBox>
                    </content>
                </ScrollPane>

            </VBox>
        </children>
    </AnchorPane>

    <!-- Painel lateral da direita -->
    <AnchorPane prefWidth="400.0" style="-fx-background-color: #f4f4f4;">
        <children>
            <!-- Informações do aluno -->
            <VBox layoutX="14.0" layoutY="14.0" prefHeight="40.0"
                  style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0;"
                  AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
                <children>
                    <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0">
                        <padding>
                            <Insets top="0" right="0" bottom="0" left="15"/>
                        </padding>
                        <Label text="Aluno:" textFill="#0a3d62">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <Label fx:id="lblAlunoNome" text="Nome do Aluno">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                    </HBox>
                </children>
            </VBox>

            <!-- Área para digitar feedback -->
            <TextArea fx:id="ta_professorTG_Feedback" promptText="Digite o feedback para o aluno aqui..." wrapText="true"
                      AnchorPane.topAnchor="68" AnchorPane.leftAnchor="14" AnchorPane.rightAnchor="14" AnchorPane.bottomAnchor="72"/>

            <!-- Botão finalizar -->
            <Button fx:id="btn_professorTG_finalizar" text="Finalizar"
                    style="-fx-background-color: #1E90FF; -fx-background-radius: 8;" textFill="WHITE"
                    AnchorPane.bottomAnchor="18" AnchorPane.rightAnchor="14"
                    prefHeight="35" prefWidth="94" onAction="#finalizar">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>
        </children>
    </AnchorPane>

</HBox>
