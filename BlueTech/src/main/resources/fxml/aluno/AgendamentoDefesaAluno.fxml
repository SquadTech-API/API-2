<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_LEFT" prefHeight="600" prefWidth="880" spacing="18" styleClass="solicitacao-root" stylesheets="@../../css/Style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.squadtech.bluetech.controller.aluno.AgendamentoDefesaAlunoController">
    <children>
        <VBox prefWidth="860" spacing="12" styleClass="solicitacao-form">
            <children>
                <Label styleClass="solicitacao-title" text="Agendamento de Defesa" />
                <Label text="Solicite ao seu orientador a marcação da defesa." />
                <TextArea fx:id="txtMensagemInicial" promptText="Escreva sua solicitação inicial" styleClass="solicitacao-textarea" />
                <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="solicitacao-buttons">
                    <children>
                        <Button onAction="#limpar" text="Limpar" />
                        <Button fx:id="btnSolicitar" onAction="#enviarSolicitacao" text="Solicitar" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <Label styleClass="solicitacao-title" text="Negociação Atual" />
        <ScrollPane fx:id="scrollCards" fitToWidth="true" prefHeight="420">
            <content>
                <FlowPane fx:id="flowCards" hgap="12" vgap="12">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </children>
</VBox>
