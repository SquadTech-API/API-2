<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@../../css/Style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.squadtech.bluetech.controller.aluno.CriarSecaoAPIController">

    <!-- Cabeçalho -->
    <top>
        <Label styleClass="label-title" text="Nova Seção API">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
        </Label>
    </top>

    <!-- Área Central com o Formulário -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <content>
                <VBox alignment="TOP_CENTER" spacing="20">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="30" />
                            <ColumnConstraints percentWidth="70" />
                        </columnConstraints>

                        <children>
                            <!-- 0: Semestre do Curso -->
                            <Label text="Semestre do Curso:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <ChoiceBox fx:id="choiceSemestreCurso" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <!-- 1: Ano -->
                            <Label text="Ano:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <TextField fx:id="txtAno" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <!-- 2: Semestre do Ano -->
                            <Label text="Semestre do Ano:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <ChoiceBox fx:id="choiceSemestreAno" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <!-- 3: API (auto) -->
                            <Label text="API:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <TextField fx:id="txtApi" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                            <!-- 4: Empresa Parceira -->
                            <Label text="Empresa Parceira:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                            <TextField fx:id="txtEmpresa" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                            <!-- 5: Problema -->
                            <Label text="Problema:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                            <TextArea fx:id="txtProblema" prefRowCount="4" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                            <!-- 6: Solução -->
                            <Label text="Solução:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                            <TextArea fx:id="txtSolucao" prefRowCount="4" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                            <!-- 7: Repositório -->
                            <Label text="Link do Repositório Git:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                            <TextField fx:id="txtRepositorio" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                            <!-- 8: Linkedin -->
                            <Label text="Link do Linkedin:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                            <TextField fx:id="txtLinkedin" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                            <!-- 9: Tecnologias -->
                            <Label text="Tecnologias Utilizadas:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
                            <TextArea fx:id="txtTecnologias" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="9" />

                            <!-- 10: Contribuições -->
                            <Label text="Contribuições Pessoais:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
                            <TextArea fx:id="txtContribuicoes" prefRowCount="4" GridPane.columnIndex="1" GridPane.rowIndex="10" />

                            <!-- 11: Hard Skills -->
                            <Label text="Hard Skills:" GridPane.columnIndex="0" GridPane.rowIndex="11" />
                            <TextArea fx:id="txtHardSkills" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="11" />

                            <!-- 12: Soft Skills -->
                            <Label text="Soft Skills:" GridPane.columnIndex="0" GridPane.rowIndex="12" />
                            <TextArea fx:id="txtSoftSkills" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="12" />
                        </children>
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                    </GridPane>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- Rodapé com botões -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Button fx:id="btnVoltar" onAction="#voltarEntregasAluno" styleClass="button-secondary" text="Voltar" />
            <Button fx:id="btnCancelar" onAction="#handleCancelar" styleClass="button-secondary" text="Cancelar" />
            <Button fx:id="btnSalvar" onAction="#salvarNovaSecaoAPI" styleClass="button-primary" text="Salvar" />
        </HBox>
    </bottom>

</BorderPane>
