<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@../../css/Style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.squadtech.bluetech.controller.aluno.CriarSecaoAPIController">

    <!-- Cabeçalho -->
    <top>
        <Label styleClass="label-title" text="Nova Seção API">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
        </Label>
    </top>

    <!-- Área Central com o Formulário -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <content>
                <VBox alignment="TOP_CENTER" spacing="20">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="30" />
                            <ColumnConstraints percentWidth="70" />
                        </columnConstraints>

                        <children>
                            <Label text="Semestre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextField fx:id="txtSemestre" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label text="Ano:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <TextField fx:id="txtAno" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label text="Semestre do Ano:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <TextField fx:id="txtSemestreAno" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <Label text="Empresa Parceira:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <TextField fx:id="txtEmpresa" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                            <Label text="Problema:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                            <TextArea fx:id="txtProblema" prefRowCount="4" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                            <Label text="Solução:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                            <TextArea fx:id="txtSolucao" prefRowCount="4" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                            <Label text="Link do Repositório Git:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                            <TextField fx:id="txtRepositorio" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                            <!-- Novo campo: LinkedIn -->
                            <Label text="Link do Linkedin:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                            <TextField fx:id="txtLinkedin" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                            <Label text="Tecnologias Utilizadas:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                            <TextArea fx:id="txtTecnologias" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                            <Label text="Contribuições Pessoais:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
                            <TextArea fx:id="txtContribuicoes" prefRowCount="4" GridPane.columnIndex="1" GridPane.rowIndex="9" />

                            <Label text="Hard Skills:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
                            <TextArea fx:id="txtHardSkills" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="10" />

                            <!-- Novo campo: Soft Skills -->
                            <Label text="Soft Skills:" GridPane.columnIndex="0" GridPane.rowIndex="11" />
                            <TextArea fx:id="txtSoftSkills" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="11" />
                        </children>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- Rodapé com botões -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Button fx:id="btnVoltar" onAction="#voltarEntregasAluno" styleClass="button-secondary" text="Voltar" />
            <Button fx:id="btnCancelar" onAction="#handleCancelar" styleClass="button-secondary" text="Cancelar" />
            <Button fx:id="btnSalvar" onAction="#salvarNovaSecaoAPI" styleClass="button-primary" text="Salvar" />
        </HBox>
    </bottom>

</BorderPane>
