<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@../../css/Style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="br.com.squadtech.bluetech.controller.aluno.EditarSecaoAPIController">

    <!-- Cabeçalho -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets bottom="15" left="20" right="20" top="15" />
            </padding>

            <Label styleClass="label-title" text="Editar Seção API" HBox.hgrow="ALWAYS" />

            <!-- Espaço elástico para alinhar o botão à direita -->
            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="btnVoltar" onAction="#voltarTelaSecaoAPI" styleClass="button-secondary" text="Voltar" />
        </HBox>
    </top>

    <!-- Corpo principal dividido -->
    <center>
        <SplitPane dividerPositions="0.7">
            <items>

                <!-- Painel Esquerdo: Editor Markdown -->
                <VBox spacing="10">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <Label style="-fx-font-weight: bold;" text="Conteúdo da Seção (Markdown editável):" />

                    <TextArea fx:id="txtMarkdownEditor" promptText="Edite aqui o conteúdo da seção em formato Markdown..." style="-fx-font-family: Consolas; -fx-font-size: 12px;" wrapText="true" VBox.vgrow="ALWAYS" />
                </VBox>

                <!-- Painel Direito: Feedback do Orientador -->
                <VBox spacing="10">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <Label style="-fx-font-weight: bold;" text="Feedback do Orientador:" />

                    <TextArea fx:id="txtFeedbackOrientador" editable="false" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-control-inner-background: #fafafa;" wrapText="true" VBox.vgrow="ALWAYS" />
                </VBox>

            </items>
        </SplitPane>
    </center>

    <!-- Rodapé com botões -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="15" left="20" right="20" top="15" />
            </padding>

            <Button fx:id="btnCancelar" onAction="#cancelaMudancas" styleClass="button-secondary" text="Cancelar" />

            <Button fx:id="btnSalvar" onAction="#salvarNovaVersaoSessaoAPI" styleClass="button-primary" text="Salvar Alterações" />
        </HBox>
    </bottom>

</BorderPane>
