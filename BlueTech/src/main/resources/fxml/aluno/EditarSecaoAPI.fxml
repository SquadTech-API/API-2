<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@../../css/Style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.squadtech.bluetech.controller.aluno.EditarSecaoAPIController">

    <!-- Cabeçalho -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="titled-pane">
            <padding>
                <Insets bottom="15" left="20" right="20" top="15" />
            </padding>

            <Label styleClass="label-title" text="Editar Seção API" HBox.hgrow="ALWAYS" />

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="btnVoltar" onAction="#voltarTelaSecaoAPI" styleClass="button-secondary" text="Voltar" />
        </HBox>
    </top>

    <!-- Corpo principal: formulário + feedback -->
    <center>
        <SplitPane dividerPositions="0.65">
            <items>

                <!-- Painel Esquerdo: Formulário da Seção -->
                <!-- Painel Esquerdo: Formulário da Seção -->
                <ScrollPane fitToWidth="true">
                    <content>
                        <VBox spacing="16" style="-fx-padding: 20;">

                            <!-- PROBLEMA -->
                            <VBox spacing="4">
                                <Label style="-fx-font-weight: bold;" text="Problema:" />
                                <TextArea fx:id="taProblema" prefRowCount="3" wrapText="true" VBox.vgrow="NEVER" />
                            </VBox>

                            <!-- SOLUÇÃO -->
                            <VBox spacing="4">
                                <Label style="-fx-font-weight: bold;" text="Solução:" />
                                <TextArea fx:id="taSolucao" prefRowCount="3" wrapText="true" />
                            </VBox>

                            <!-- REPOSITÓRIO -->
                            <VBox spacing="4">
                                <Label style="-fx-font-weight: bold;" text="Repositório:" />
                                <TextArea fx:id="taRepositorio" prefRowCount="2" wrapText="true" />
                            </VBox>

                            <!-- LINKEDIN -->
                            <VBox spacing="4">
                                <Label style="-fx-font-weight: bold;" text="LinkedIn:" />
                                <TextArea fx:id="taLinkedin" prefRowCount="2" wrapText="true" />
                            </VBox>

                            <!-- TECNOLOGIAS -->
                            <VBox spacing="4">
                                <Label style="-fx-font-weight: bold;" text="Tecnologias:" />
                                <TextArea fx:id="taTecnologias" prefRowCount="3" wrapText="true" />
                            </VBox>

                            <!-- CONTRIBUIÇÕES -->
                            <VBox spacing="4">
                                <Label style="-fx-font-weight: bold;" text="Contribuições:" />
                                <TextArea fx:id="taContribuicoes" prefRowCount="3" wrapText="true" />
                            </VBox>

                            <!-- HARD SKILLS -->
                            <VBox spacing="4">
                                <Label style="-fx-font-weight: bold;" text="Hard Skills:" />
                                <TextArea fx:id="taHardSkills" prefRowCount="3" wrapText="true" />
                            </VBox>

                            <!-- SOFT SKILLS -->
                            <VBox spacing="4">
                                <Label style="-fx-font-weight: bold;" text="Soft Skills:" />
                                <TextArea fx:id="taSoftSkills" prefRowCount="3" wrapText="true" />
                            </VBox>

                        </VBox>
                    </content>
                </ScrollPane>


                <!-- Painel Direito: Feedback do Orientador -->
                <VBox spacing="10">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Feedback do Orientador" />

                    <TextArea fx:id="txtFeedbackOrientador" editable="false" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-control-inner-background: #fafafa;" wrapText="true" VBox.vgrow="ALWAYS" />
                </VBox>

            </items>
        </SplitPane>
    </center>

    <!-- Rodapé com botões -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="15" left="20" right="20" top="15" />
            </padding>

            <Button fx:id="btnCancelar" onAction="#cancelaMudancas" styleClass="button-secondary" text="Cancelar" />

            <Button fx:id="btnSalvar" onAction="#salvarNovaVersaoSessaoAPI" styleClass="button-primary" text="Salvar Alterações" />
        </HBox>
    </bottom>

</BorderPane>
