<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@../../css/Style.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.squadtech.bluetech.controller.aluno.EditarSecaoAPIController">

    <!-- Cabeçalho -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header-bar">
            <padding>
                <Insets bottom="15" left="20" right="20" top="15" />
            </padding>

            <Label text="Editar Seção API"
                   styleClass="label-title"
                   HBox.hgrow="ALWAYS" />

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="btnVoltar"
                    onAction="#voltarTelaSecaoAPI"
                    text="Voltar"
                    styleClass="button-secondary" />
        </HBox>
    </top>

    <!-- Corpo principal: formulário + feedback -->
    <center>
        <SplitPane dividerPositions="0.65">
            <items>

                <!-- Painel Esquerdo: Formulário da Seção -->
                <!-- Painel Esquerdo: Formulário da Seção -->
                <ScrollPane fitToWidth="true">
                    <content>
                        <VBox spacing="16" style="-fx-padding: 20;">

                            <!-- PROBLEMA -->
                            <VBox spacing="4">
                                <Label text="Problema:" style="-fx-font-weight: bold;" />
                                <TextArea fx:id="taProblema"
                                          wrapText="true"
                                          prefRowCount="3"
                                          VBox.vgrow="NEVER"/>
                            </VBox>

                            <!-- SOLUÇÃO -->
                            <VBox spacing="4">
                                <Label text="Solução:" style="-fx-font-weight: bold;" />
                                <TextArea fx:id="taSolucao"
                                          wrapText="true"
                                          prefRowCount="3" />
                            </VBox>

                            <!-- REPOSITÓRIO -->
                            <VBox spacing="4">
                                <Label text="Repositório:" style="-fx-font-weight: bold;" />
                                <TextArea fx:id="taRepositorio"
                                          wrapText="true"
                                          prefRowCount="2" />
                            </VBox>

                            <!-- LINKEDIN -->
                            <VBox spacing="4">
                                <Label text="LinkedIn:" style="-fx-font-weight: bold;" />
                                <TextArea fx:id="taLinkedin"
                                          wrapText="true"
                                          prefRowCount="2" />
                            </VBox>

                            <!-- TECNOLOGIAS -->
                            <VBox spacing="4">
                                <Label text="Tecnologias:" style="-fx-font-weight: bold;" />
                                <TextArea fx:id="taTecnologias"
                                          wrapText="true"
                                          prefRowCount="3" />
                            </VBox>

                            <!-- CONTRIBUIÇÕES -->
                            <VBox spacing="4">
                                <Label text="Contribuições:" style="-fx-font-weight: bold;" />
                                <TextArea fx:id="taContribuicoes"
                                          wrapText="true"
                                          prefRowCount="3" />
                            </VBox>

                            <!-- HARD SKILLS -->
                            <VBox spacing="4">
                                <Label text="Hard Skills:" style="-fx-font-weight: bold;" />
                                <TextArea fx:id="taHardSkills"
                                          wrapText="true"
                                          prefRowCount="3" />
                            </VBox>

                            <!-- SOFT SKILLS -->
                            <VBox spacing="4">
                                <Label text="Soft Skills:" style="-fx-font-weight: bold;" />
                                <TextArea fx:id="taSoftSkills"
                                          wrapText="true"
                                          prefRowCount="3" />
                            </VBox>

                        </VBox>
                    </content>
                </ScrollPane>


                <!-- Painel Direito: Feedback do Orientador -->
                <VBox spacing="10">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <Label text="Feedback do Orientador"
                           style="-fx-font-weight: bold; -fx-font-size: 14px;" />

                    <TextArea fx:id="txtFeedbackOrientador"
                              editable="false"
                              wrapText="true"
                              VBox.vgrow="ALWAYS"
                              style="-fx-font-family: 'Segoe UI'; -fx-font-size: 12px; -fx-control-inner-background: #fafafa;" />
                </VBox>

            </items>
        </SplitPane>
    </center>

    <!-- Rodapé com botões -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="15" left="20" right="20" top="15" />
            </padding>

            <Button fx:id="btnCancelar"
                    onAction="#cancelaMudancas"
                    text="Cancelar"
                    styleClass="button-secondary" />

            <Button fx:id="btnSalvar"
                    onAction="#salvarNovaVersaoSessaoAPI"
                    text="Salvar Alterações"
                    styleClass="button-primary" />
        </HBox>
    </bottom>

</BorderPane>
