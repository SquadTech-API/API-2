<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="AncorPanePerfilAluno" prefHeight="700" prefWidth="900" styleClass="painel" stylesheets="@../../css/Style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.squadtech.bluetech.controller.aluno.TelaPerfilAlunoController">

    <!-- Scroll para ficar responsivo em janelas menores -->
    <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <VBox prefWidth="800" spacing="16">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <HBox alignment="CENTER" maxWidth="Infinity">
                <Label styleClass="titulo" text="Perfil do Aluno" />
            </HBox>

            <GridPane hgap="16" vgap="12">
                <columnConstraints>
                    <ColumnConstraints percentWidth="65" />
                    <ColumnConstraints percentWidth="35" />
                </columnConstraints>

                <!-- Coluna esquerda: formulários -->
                <VBox spacing="10" GridPane.columnIndex="0">

                    <GridPane hgap="8" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25" />
                            <ColumnConstraints percentWidth="75" />
                        </columnConstraints>

                        <Label styleClass="label-campos" text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="txtNome" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label styleClass="label-campos" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="txtEmail" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label styleClass="label-campos" text="Idade:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="txtIdade" promptText="Ex.: 25" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label styleClass="label-campos" text="Github:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="txtGithub" promptText="https://github.com/seuusuario" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label styleClass="label-campos" text="LinkedIn:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="txtLinkedin" promptText="https://www.linkedin.com/in/seuusuario" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>

                    <Label styleClass="label-campos" text="Histórico Acadêmico:" />
                    <TextArea fx:id="txtHistoricoAcademico" prefRowCount="5" wrapText="true" />

                    <Label styleClass="label-campos" text="Motivação:" />
                    <TextArea fx:id="txtMotivacao" prefRowCount="4" wrapText="true" />

                    <Label styleClass="label-campos" text="Histórico Profissional:" />
                    <TextArea fx:id="txtHistoricoProfissional" prefRowCount="4" wrapText="true" />

                    <Label styleClass="label-campos" text="Conhecimentos Técnicos:" />
                    <TextArea fx:id="txtConhecimentosTecnicos" prefRowCount="4" wrapText="true" />

                </VBox>

                <!-- Coluna direita: foto e ações -->
                <VBox alignment="TOP_CENTER" fillWidth="false" spacing="12" GridPane.columnIndex="1">
                    <!-- Wrapper com moldura (mesmo tamanho do ImageView + padding da moldura) -->
                    <StackPane styleClass="profile-frame">
                        <ImageView fx:id="imgFoto" fitHeight="200.0" fitWidth="200.0" nodeOrientation="INHERIT" preserveRatio="true" styleClass="profile-Image">
                            <Image url="@../../images/Usuario.png" />
                        </ImageView>
                    </StackPane>
                    <Label style="-fx-font-size:11px; -fx-text-fill:#666;" text="A foto será copiada para: ~/bluetech/fotos/" wrapText="true" />
                    <Button fx:id="btnSelecionarFoto" onAction="#handleSelecionarFoto" text="Selecionar Foto..." />
               <HBox spacing="8">
                  <children>
                     <Pane prefHeight="50.0" />
                  </children>
               </HBox>
                    <HBox alignment="CENTER" maxWidth="Infinity" spacing="8">
                        <Button fx:id="btnSalvar" onAction="#handleSalvar" style="-fx-font-weight:bold;" text="Salvar" />
                        <Button fx:id="btnCancelar" onAction="#handleCancelar" styleClass="button-secondary" text="Cancelar" />
                    </HBox>
                </VBox>
            <rowConstraints>
               <RowConstraints />
            </rowConstraints>
            </GridPane>

        </VBox>
    </ScrollPane>
</AnchorPane>
