<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="paneSignCadastro" prefHeight="470.0" prefWidth="600.0" styleClass="right-anchor-pane-sign" stylesheets="@../../css/LoginStyles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.squadtech.bluetech.controller.login.TelaCadastroController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="24.0" AnchorPane.leftAnchor="24.0" AnchorPane.rightAnchor="24.0" AnchorPane.topAnchor="24.0">
         <Label text="Registro de Acesso para Aluno">
            <font>
               <Font name="Cascadia Mono Regular" size="16.0" />
            </font>
         </Label>
         <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../assets/Usuario.png" />
            </image>
         </ImageView>
         <VBox alignment="TOP_LEFT" spacing="10.0" fillWidth="true" maxWidth="Infinity">
            <VBox spacing="4.0" fillWidth="true">
               <Label text="Nome">
                  <font>
                     <Font name="Cascadia Mono Regular" size="14.0" />
                  </font>
               </Label>
               <TextField fx:id="txtFldSignAlunoNome" maxWidth="Infinity" prefHeight="34.0" promptText="Nome Completo" />
            </VBox>
            <VBox spacing="4.0" fillWidth="true">
               <Label text="E-mail">
                  <font>
                     <Font name="Cascadia Mono Regular" size="14.0" />
                  </font>
               </Label>
               <TextField fx:id="txtFldSignAlunoEmail" maxWidth="Infinity" prefHeight="34.0" promptText="E-mail Institucional" />
            </VBox>
            <VBox spacing="4.0" fillWidth="true">
               <Label text="Senha">
                  <font>
                     <Font name="Cascadia Mono Regular" size="14.0" />
                  </font>
               </Label>
               <PasswordField fx:id="passFldSignAluno" maxWidth="Infinity" prefHeight="34.0" promptText="Digite uma Senha" />
               <PasswordField fx:id="passFldSignAlunoConf" maxWidth="Infinity" prefHeight="34.0" promptText="Confirme a Senha" />
            </VBox>
         </VBox>
         <Region VBox.vgrow="ALWAYS" />
         <JFXButton fx:id="btnSignAlunoConf" maxWidth="Infinity" prefHeight="36.0" text="Confirmar">
            <font>
               <Font name="Cascadia Mono Regular" size="12.0" />
            </font>
         </JFXButton>
      </VBox>
   </children>
</AnchorPane>
