<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" prefHeight="700" prefWidth="900" styleClass="painel" stylesheets="@../../css/Style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.squadtech.bluetech.controller.professorTG.TelaPerfilProfTGController">
    <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <VBox prefWidth="820" spacing="18">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <HBox alignment="CENTER" maxWidth="Infinity">
                <Label styleClass="label-title" text="Perfil Professor TG" />
            </HBox>

            <GridPane hgap="16" vgap="14">
                <columnConstraints>
                    <ColumnConstraints percentWidth="65" />
                    <ColumnConstraints percentWidth="35" />
                </columnConstraints>

                <VBox spacing="12" GridPane.columnIndex="0">
                    <GridPane hgap="10" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="22" />
                            <ColumnConstraints percentWidth="78" />
                        </columnConstraints>

                        <Label styleClass="label-campos" text="Nome:" GridPane.rowIndex="0" />
                        <TextField fx:id="txtNome" promptText="Seu nome" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label styleClass="label-campos" text="Email:" GridPane.rowIndex="1" />
                        <TextField fx:id="txtEmail" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label styleClass="label-campos" text="Cargo:" GridPane.rowIndex="2" />
                        <TextField fx:id="txtCargo" promptText="Coordenador, Professor..." GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label styleClass="label-campos" text="Curso vinculado:" GridPane.rowIndex="3" />
                        <TextField fx:id="txtCurso" promptText="Curso vinculado" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label styleClass="label-campos" text="Senha atual:" GridPane.rowIndex="4" />
                        <PasswordField fx:id="txtSenhaAtual" promptText="Senha atual" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label styleClass="label-campos" text="Nova senha:" GridPane.rowIndex="5" />
                        <PasswordField fx:id="txtNovaSenha" promptText="Nova senha" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                    </GridPane>

                    <Label styleClass="label-campos" text="Formação acadêmica:" />
                    <TextArea fx:id="txtFormacao" prefRowCount="4" wrapText="true" />

                    <Label styleClass="label-campos" text="Áreas de especialização:" />
                    <TextArea fx:id="txtAreas" prefRowCount="4" wrapText="true" />
                </VBox>

                <VBox alignment="TOP_CENTER" spacing="12" GridPane.columnIndex="1">
                    <StackPane styleClass="profile-frame">
                        <ImageView fx:id="imgFoto" fitHeight="200" fitWidth="200" preserveRatio="true" styleClass="profile-image">
                            <image>
                                <Image url="@../../assets/Usuario.png" />
                            </image>
                        </ImageView>
                    </StackPane>
                    <Label style="-fx-font-size: 11px; -fx-text-fill: #666;" text="A foto será copiada para ~/BlueTech/PerfilProfessorTG" wrapText="true" />
                    <Button fx:id="btnSelecionarFoto" onAction="#handleSelecionarFoto" text="Selecionar foto" />
                    <HBox spacing="8">
                        <children>
                            <Pane prefHeight="40" />
                        </children>
                    </HBox>
                </VBox>

                <rowConstraints>
                    <RowConstraints />
                </rowConstraints>
            </GridPane>

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnSalvar" onAction="#handleSalvar" style="-fx-font-weight: bold;" text="Salvar" />
                <Button fx:id="btnCancelar" onAction="#handleCancelar" styleClass="button-secondary" text="Cancelar" />
            </HBox>
        </VBox>
    </ScrollPane>
</AnchorPane>

