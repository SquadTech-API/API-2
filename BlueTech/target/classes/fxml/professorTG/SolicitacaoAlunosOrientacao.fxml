<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../../css/Style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.squadtech.bluetech.controller.professorTG.SolicitacaoAlunosOrientacaoController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" styleClass="solicitacao-root">
         <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" styleClass="titulo-principal solicitacao-title" text="Solicitações de Orientação Recebidas" VBox.vgrow="NEVER">
               <padding>
                  <Insets bottom="10.0" left="20.0" top="20.0" />
               </padding>
            </Label>
            <Label style="-fx-font-size: 14px;" text="Aqui você pode visualizar e responder às solicitações de orientação enviadas pelos alunos." VBox.vgrow="NEVER">
               <padding>
                  <Insets bottom="10.0" left="20.0" />
               </padding>
            </Label>
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                  <FlowPane fx:id="flowCardsSolicitacoes" hgap="10.0" prefWrapLength="760.0" vgap="10.0" styleClass="solicitacao-cards-section">
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </FlowPane>
               </content>
            </ScrollPane>
            <HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="NEVER">
               <children>
                  <Button fx:id="btnAtualizarLista" onAction="#atualizarSolicitacoes" styleClass="button-secondary" text="Atualizar Lista" />
               </children>
               <padding>
                  <Insets bottom="20.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>