<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.squadtech.bluetech.controller.admin.ImportacaoCSVProfessorTGController"
            stylesheets="@../../css/Style.css"
            prefHeight="700" prefWidth="900">

    <ScrollPane fitToWidth="true" style="-fx-padding: 20;" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">

        <VBox spacing="20" style="-fx-pref-width: 800px;">

            <!-- Título -->
            <Label text="Importação de Professores TG via CSV"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <!-- Instruções -->
            <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f0f8ff; -fx-border-radius: 5;">
                <Label text="Instruções:" style="-fx-font-weight: bold;"/>
                <Label text="1. O arquivo CSV deve ter as colunas: nome, email, cargo, tipo_tg, curso_vinculado"/>
                <Label text="2. Formato esperado: nome,email,cargo,tipo_tg,curso_vinculado"/>
                <Label text="3. Tipos de TG válidos: TG1, TG2, AMBOS"/>
                <Label text="4. Exemplo: João Silva,joao.silva@email.com,Professor,TG1,Engenharia"/>
            </VBox>

            <!-- Upload do arquivo -->
            <VBox spacing="10">
                <Label text="Selecionar Arquivo CSV:" style="-fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <JFXButton fx:id="btnSelecionarArquivo" text="Selecionar CSV"
                               styleClass="button"
                               onAction="#selecionarArquivo"
                               style="-fx-pref-width: 150px;"/>
                    <Label fx:id="lblArquivoSelecionado" text="Nenhum arquivo selecionado"
                           style="-fx-text-fill: #666;"/>
                </HBox>
            </VBox>

            <!-- Visualização dos dados -->
            <VBox spacing="10">
                <Label text="Pré-visualização dos Dados:" style="-fx-font-weight: bold;"/>
                <TableView fx:id="tableViewPreview" style="-fx-pref-height: 200px; -fx-pref-width: 800px;"
                           styleClass="card">
                    <columns>
                        <TableColumn fx:id="colPreviewNome" text="Nome" prefWidth="200"/>
                        <TableColumn fx:id="colPreviewEmail" text="Email" prefWidth="250"/>
                        <TableColumn fx:id="colPreviewCargo" text="Cargo" prefWidth="150"/>
                        <TableColumn fx:id="colPreviewTipoTG" text="Tipo TG" prefWidth="100"/>
                        <TableColumn fx:id="colPreviewCurso" text="Curso" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Controles de importação -->
            <VBox spacing="10">
                <Label text="Controles de Importação:" style="-fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <JFXButton fx:id="btnValidar" text="Validar Dados"
                               styleClass="button-secondary"
                               onAction="#validarDados"
                               style="-fx-pref-width: 150px;"
                               disable="true"/>
                    <JFXButton fx:id="btnImportar" text="Importar Professores"
                               styleClass="button"
                               onAction="#importarProfessores"
                               style="-fx-pref-width: 150px;"
                               disable="true"/>
                    <JFXButton fx:id="btnLimpar" text="Limpar"
                               styleClass="button-secondary"
                               onAction="#limparImportacao"
                               style="-fx-pref-width: 100px;"/>
                </HBox>

                <!-- Barra de progresso -->
                <ProgressBar fx:id="progressBar" progress="0" style="-fx-pref-width: 800px;"
                             visible="false"/>
            </VBox>

            <!-- Log de resultados -->
            <VBox spacing="10">
                <Label text="Log de Importação:" style="-fx-font-weight: bold;"/>
                <TextArea fx:id="txtLog" style="-fx-pref-width: 800px; -fx-pref-height: 150px;"
                          styleClass="text-area" editable="false"
                          promptText="Aqui aparecerão os resultados da importação..."/>
            </VBox>

            <!-- Estatísticas -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox>
                    <Label text="Total de Registros:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblTotalRegistros" text="0" style="-fx-font-size: 18px;"/>
                </VBox>
                <VBox>
                    <Label text="Válidos:" style="-fx-font-weight: bold; -fx-text-fill: green;"/>
                    <Label fx:id="lblValidos" text="0" style="-fx-font-size: 18px; -fx-text-fill: green;"/>
                </VBox>
                <VBox>
                    <Label text="Inválidos:" style="-fx-font-weight: bold; -fx-text-fill: red;"/>
                    <Label fx:id="lblInvalidos" text="0" style="-fx-font-size: 18px; -fx-text-fill: red;"/>
                </VBox>
                <VBox>
                    <Label text="Importados:" style="-fx-font-weight: bold; -fx-text-fill: blue;"/>
                    <Label fx:id="lblImportados" text="0" style="-fx-font-size: 18px; -fx-text-fill: blue;"/>
                </VBox>
            </HBox>

        </VBox>
    </ScrollPane>

</AnchorPane>