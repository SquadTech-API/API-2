<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<SplitPane fx:id="splitPanelMenuProfessorOri" dividerPositions="0.6" orientation="VERTICAL" styleClass="menu-lateral" stylesheets="@../../css/MenuStyles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.squadtech.bluetech.controller.professorOrientador.MenuProfessorOrientadorController">

    <items>
        <AnchorPane fx:id="paneSuperiorMenuProfessorOri" prefHeight="260.0">
            <children>
                <VBox alignment="TOP_CENTER" spacing="12.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                    <children>
                        <Label fx:id="lblTituloProfessorOri" styleClass="label-title" text="Painel Professor Orientador" textFill="#ffd400">
                            <font>
                                <Font name="CaskaydiaMono NFM SemiBold" size="20" />
                            </font>
                        </Label>
                  <StackPane fx:id="profileFrame" styleClass="profile-frame">
                     <ImageView fx:id="imgViewFotoProfessorOri" fitHeight="112.0" fitWidth="112.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../../assets/Usuario.png" />
                        </image>
                     </ImageView>
                  </StackPane>
                        <VBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="6.0">
                            <children>
                                <Label fx:id="lblProfessorOri" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="PROFESSOR ORIENTADOR: Fulano" textFill="WHITE" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>

        <!-- Menu inferior -->
        <VBox fx:id="vboxMenuProfessorOri" alignment="TOP_CENTER" fillWidth="true" prefWidth="200.0" spacing="20.0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <children>
                <JFXButton fx:id="btnListaAlunos" maxWidth="Infinity" onAction="#abrirListaAlunos" styleClass="submenu-btn" text="Listar Alunos" />
                <JFXButton fx:id="btnSolicitacoesOrientacao" layoutX="30.0" layoutY="95.0" maxWidth="Infinity" onAction="#abrirSolicitacoesOrientacao" styleClass="submenu-btn" text="Solicitações de Orientação" />
                <JFXButton fx:id="btnAgendamentoDefesa" maxWidth="Infinity" onAction="#abrirAgendamentosDefesa" styleClass="submenu-btn" text="Agendamento de Defesa" />
                <JFXButton fx:id="btnEditarPerfilprofessor" maxWidth="Infinity" onAction="#abrirTelaPerfilProfessorOrientador" styleClass="submenu-btn" text="Editar Perfil" />
                <JFXButton fx:id="btnProfessorTG" maxWidth="Infinity" onAction="#abrirTelaPerfilTG" styleClass="submenu-btn" text="Tela Professor TG" visible="false" />
                <Separator opacity="0.4" />
                <JFXButton fx:id="btnLogoutProfessorOri" maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Sair" />
            </children>
        </VBox>
    </items>
</SplitPane>
